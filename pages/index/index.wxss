/**index.wxss**/
.flex-center{
  display: flex;
  align-items: center;
}
.flex-end{
  display: flex;
  align-items: flex-end;
}
.flex-center-between{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex-end-between{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.flex-column-center{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.m-b-14{
  margin-bottom: 14rpx;
}
.color-style{
  color:#003049!important;
}
p{
  font-size: 28rpx;
}
.chargingPage{
  width:100%;
  font-family:'PingFangSC-Medium,PingFang SC';
}
.chargingItem{
  width:90%;
  padding:38rpx 0 18rpx 0;
  border-bottom:2rpx solid #D8D8D8;
  box-sizing: border-box;
  font-size: 28rpx;
  margin:0 auto;
  color:#999;
}
.chargingItem:last-child{
  margin-bottom:200rpx;
}
.item_top_left{
  width:80%;
}
.item_top_left h4{
  display: block;
  margin-bottom: 14rpx;
  font-size: 32rpx;
  color:#003049;
  font-weight: bold;
}
.item_top_left p{
  display: block;
}
.item_top_right{
  width:20%;
}
.item_top_right .right_icon{
  width: 40rpx;
  height: 40rpx;
}
.right_icon > image{
  width:100%;
  height:100%;
}
.item_bottom > p > span{
  font-size: 42rpx;
  color: #F77F00;
  margin-right:10rpx;
}
.item_bottom .item_bottom_desc span{
  color: #F77F00;
  margin-left:10rpx;
}
.item_bottom .item_bottomdesc_fast{
  margin: 0 42rpx;
}
page::after{
  content: '';
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  background-color: #999;
  z-index: 9999;
}