<!--pages/mine/mine.wxml-->
<view class="minePage">
  <view class="header">
    <image src="/imgs/header.png" wx:if="{{phoneNum == ''}}"></image>
    <view class="avatar" wx:else>
      <open-data type='userAvatarUrl'></open-data>
    </view>
    
    <button wx:if="{{phoneNum == ''}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">登录 / 注册</button>
    <view wx:else>{{phoneNum}}</view>
  </view>
  <view class="balance">
    账户余额 <text>10.00</text> 元
  </view>
  <button class="recharge" type="primary" hover-class="none" bindtap="recharge">充值</button>
  <view class="rechargeList" bindtap="chargingOrder">
    <text>充电订单</text>
    <image src="/imgs/right.png"></image>
  </view>
  <view class="rechargeList" bindtap="accountDetails">
    <text>账户明细</text>
    <image src="/imgs/right.png"></image>
  </view>
</view>
