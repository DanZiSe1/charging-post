/* pages/mine/mine.wxss */
.minePage{
  padding: 30rpx 38rpx 0 44rpx;
  box-sizing: border-box;
  color: #333;
}
.header{display: flex;align-items: center;}
.header image,.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  overflow: hidden;
}
.avatar{
  margin-right: 20rpx;
}
.phoneNum{color: #003049;font-size: 28rpx;}
.header button {
  width: 180rpx!important;
  margin-left: 20rpx!important;
  background-color: #fff;
  border: 2rpx solid #F77F00;
  color: #F77F00;
  font-size: 24rpx;
  padding: 0;
  height: 60rpx;
  line-height: 58rpx;
  font-weight: normal;
  border-radius:16rpx;
}
.header button::after {
  border: 0; 
}
.balance{
  padding: 48rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.accountTxt{color: #003049;font-size: 28rpx;padding-bottom: 10rpx;}
.account{color: #F77F00;font-size: 48rpx;font-weight: bold;}
.recharge{
  width:120rpx;
  height: 56rpx;
  text-align: center;
  line-height: 58rpx;
  font-size: 24rpx;
  border-radius:16rpx;
  color: #D62828;
  border:2rpx solid #D62828;
}
.rechargeList{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 30rpx;
  padding-bottom: 32rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #D8D8D8;
  font-size: 32rpx;
  color: #003049;
  font-weight: bold;
}

.rechargeList .right{
  width: 18rpx;
  height: 32rpx;
  margin-right: 30rpx;
}
.rechargeList view{
  display: flex;
  align-items: center;
}
.rechargeList .listImg{
  width: 32rpx;
  height: 38rpx;
  margin-right: 26rpx;
}
page::after{
  content: '';
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  background-color: #999;
  z-index: 9999;
}
